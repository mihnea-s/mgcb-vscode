{
	"name": "mgcb-vscode",
	"publisher": "mgcb-vscode",
	"displayName": "MonoGame Content Builder",
	"description": "Edit MonoGame Content Builder files in VSCode",
	"version": "0.0.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/mihnea-s/mgcb-vscode.git"
	},
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.mgcb"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"properties": {
				"mgcb.executablePath": {
					"type": "string",
					"default": "mgcb-editor",
					"description": "MGCB editor executable path."
				}
			}
		},
		"commands": [
			{
				"command": "_mgcb.openInExternalEditor",
				"title": "Open in external editor",
				"icon": {
					"dark": "./media/button-dark.svg",
					"light": "./media/button-light.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "_mgcb.openInExternalEditor",
					"when": "false"
				}
			],
			"editor/context": [
				{
					"command": "_mgcb.openInExternalEditor",
					"when": "resourceExtname == .mgcb",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "_mgcb.openInExternalEditor",
					"when": "resourceExtname == .mgcb",
					"group": "navigation"
				}
			]
		},
		"languages": [
			{
				"id": "mgcb",
				"aliases": [
					"MonoGame Content Builder"
				],
				"extensions": [
					".mgcb"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mgcb",
				"scopeName": "source.mgcb",
				"path": "./language-syntax.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc extension.ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.62.0",
		"glob": "^7.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1"
	}
}
